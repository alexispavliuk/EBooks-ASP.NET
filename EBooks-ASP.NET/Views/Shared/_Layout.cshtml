<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="panel">
        <a href="@Url.Action("Index", "Home")">
            <img class="logo" src="~/Content/reading.png" />
        </a>
        <a href="@Url.Action("Index", "Home")" style="text-decoration:none">
            <p class="main_head">EBooks</p>
        </a>
        <div id="lang_panel" class="lang_panel">
            <p class="lang">ua</p>
            <p class="lang_border">|</p>
            <p class="lang">ru</p>
            <p class="lang_border">|</p>
            <p class="lang">en</p>
        </div>
    </div>
    <div class="background-content">
        <div class="container-content">
            @RenderBody()
            <div class="menu">
                <a href="@Url.Action("Index", "Home")">
                    <button class="menu_item">Головна</button>
                </a>
                <a href="@Url.Action("Index", "Guest")">
                    <button class="menu_item">Відгуки</button>
                </a>
                <a href="@Url.Action("Index", "Poll")">
                    <button class="menu_item">Анкета</button>
                </a>
            </div>
        </div>
    </div>
    <div class="footer">
        <div>
            <img class="up" id="up_button" src="~/Content/up.png" />
        </div>
        <p class="footer_text">&copy; @DateTime.Now.Year - EBooks</p>
        <p class="footer_text">Author: Oleksii Pavliuk</p>
        <p class="footer_text">alexispavliuk@gmail.com</p>
    </div>

    @Scripts.Render("~/bundles/script")

    @RenderSection("scripts", required: false)
</body>
</html>
